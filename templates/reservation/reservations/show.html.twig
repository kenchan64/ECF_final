{% extends 'base.html.twig' %}

{% block title %}Réservations{% endblock %}

{% block body %}
    <div class="text-center mt-5 mb-5">
        <h1>Toutes les réservations</h1>
    </div>
    <div class="table-responsive" style="display: flex; justify-content: center; ">
        <table class="table table-bordered table-striped w-50 text-center" >
            <thead class="thead-dark">
            <tr>
                <th>Date</th>
                <th>Heure</th>
                <th>Nb de couverts</th>
                <th>Allergies</th>
            </tr>
            </thead>
            <tbody>
            {% for reservation in reservations %}
                <tr>
                    <td>{{ reservation.date | date('Y-m-d') }}</td>
                    <td>{{ reservation.heure | date('H:i') }}</td>
                    <td>{{ reservation.nbCouverts }}</td>
                    <td>{{ reservation.allergies }}</td>
                    <td>
                        <form action="{{ path('reservation_delete', {'id': reservation.id}) }}" method="POST" onsubmit="return confirm('Are you sure you want to delete this reservation?')">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
