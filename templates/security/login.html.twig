{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="text-center mt-5">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            {% if app.user %}
                <div class="mb-4">
                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}
            <h1 class="mb-3 underline-title">Please sign in</h1><br>
            <label for="inputEmail" class="text-center">Email</label>
            <input type="email" style="max-width: 600px;" value="{{ last_username }}" name="email" id="inputEmail"
                   class="form-control mb-3 text-center mx-auto"
                   autocomplete="email" required autofocus>
            <label for="inputPassword" class="text-center">Password</label>
            <input type="password" style="max-width: 600px;" name="password" id="inputPassword"
                   class="form-control text-center mx-auto"
                   autocomplete="current-password"
                   required>
            <label for="inputDefaultGuests" class="text-center">Default Guests</label>
            <input type="number" style="max-width: 600px;" value="{{ default_guests }}" name="default_guests" id="inputDefaultGuests"
                   class="form-control mb-3 text-center mx-auto" required>

            <label for="inputAllergies" class="text-center">Allergies</label>
            <textarea style="max-width: 600px;" name="allergies" id="inputAllergies" class="form-control text-center mx-auto">{{ allergies }}</textarea>
            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}">
            <input type="hidden" name="reservation_form" value="existing_user">
            <button class="btn btn-lg btn-success mt-4" type="submit">
                {% if app.user %}Sign in{% else %}Create account{% endif %}
            </button>
        </form>
    </div>
{% endblock %}
